<% content_for(:title_tag) do %>
  Найти нас · Awm
<% end %>
<div class="page-container">
  <div class="footer-cards">
    <div class="container">
      <div class="row">
        <div class="container">
          <h2 class="center-align title-find-us"> Найти нас </h2>
        </div>
        <div class="find-us-card">
          <div class="col s12 find-us-card-margin">
            <div class="row">
              <div class="col s6">
                <div class="footer-card left-align">
                  <h3 class="header-footer-card"> Мы открыты: </h3>
                </div>
              </div>
              <div class="col s6">
                <div class="center-align adding-margin">
                  <p class="header-text-findus"> Понедельник - Пятница </p>
                  <p class="header-time-findus"> 9:00 - 20:00 </p>
                  <p class="header-text-findus"> Суббота - Воскресенье </p>
                  <p class="header-time-findus find-us-end"> 9:00 - 20:00 </p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="find-us-card">
          <div class="col s12 find-us-card-margin">
            <div class="row">
              <div class="col s6">
                <div class="footer-card left-align">
                  <h3 class="header-footer-card"> Адрес: </h3>
                </div>
              </div>
              <div class="col s6">
                <div class="center-align adding-margin">
                  <p class="header-address"> Проспект патриотов, 11a </p>
                  <p class="header-address"> г. Воронеж </p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="find-us-card">
          <div class="col s12 find-us-card-margin">
            <div class="row">
              <div class="col s6">
                <div class="footer-card left-align">
                  <h3 class="header-footer-card">  Контакты: </h3>
                </div>
              </div>
              <div class="col s6">
                <div class="footer-card center-align">
                  <div class="phone-footer-find">
                    <div class="image-find">
                      <%= image_tag "phone.png" %>
                    </div>
                    <div class="phone-numbers">
                      <p>&nbsp;+7&nbsp; (473) &nbsp;202‑07-08</p>
                      <p>&nbsp;+7&nbsp; (473) &nbsp;202‑09-19</p>
                    </div>
                  </div>
                  <div class="phone-footer-find">
                    <div class="image-find">
                      <%= image_tag "email.png" %>
                    </div>
                    <div>
                      <p> contact@awm-vrn.ru </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="hide-on-small-only hide-on-med-only" id="map"></div>
</div>
<% content_for(:after_js) do %>
  <script type="text/javascript">
    ymaps.ready(init);
      var myMap,
          myPlacemark;

      function init(){
          myMap = new ymaps.Map("map", {
              center: [51.642284, 39.139453],
              zoom: 16
          });

          myPlacemark = new ymaps.Placemark([51.64236238396459,39.13840434768797], {
              hintContent: '<%= image_tag 'awm.png', class: 'map-awm' %>', balloonContent: 'AWM автосервис'
          }, {
            preset: 'islands#redDotIconWithCaption'
          });

          myMap.geoObjects.add(myPlacemark);
      }
  </script>
<% end %>
